<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 系统通用属性 -->
    <!-- 文字加粗 -->
    <attr name="bold" format="boolean" />

    <!-- 侧滑Layout自定义属性 -->
    <attr name="SwipeBackLayoutStyle" format="reference" />

    <!-- 侧滑退出控件自定义属性 -->
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <!-- 圆形ImageView自定义属性 -->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_color" format="integer" />
        <attr name="civ_fill_color" format="integer" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_border_width" format="integer" />
    </declare-styleable>

    <!-- 通用标题栏自定义属性 -->
    <declare-styleable name="TitleBarView">
        <attr name="title_text" format="string" />
        <attr name="title_text_color" format="color" />
        <attr name="title_text_size" format="dimension" />

        <attr name="left_text" format="string" />
        <attr name="left_text_color" format="color" />
        <attr name="left_text_size" format="dimension" />

        <attr name="right_text" format="string" />
        <attr name="right_text_color" format="color" />
        <attr name="right_text_size" format="dimension" />

        <attr name="left_icon_visibility" format="boolean" />
        <attr name="right_icon_visibility" format="boolean" />
        <attr name="bottom_divider_visibility" format="boolean" />

        <attr name="back_ground_color" format="color" />
    </declare-styleable>


    <!-- 按压式Button自定义属性 -->
    <declare-styleable name="SelectorButton">
        <!-- 圆角角度 -->
        <attr name="bg_radius" format="dimension" />
        <!-- 是否要圆角 -->
        <attr name="is_radius" format="boolean" />
        <!-- 背景颜色(如果为中空,则是边框线的颜色) -->
        <attr name="bga_color" format="color" />
        <!-- 按压效果颜色 -->
        <attr name="press_color" format="color" />
        <!-- 按压时的文本颜色 -->
        <attr name="press_text_color" format="color" />
        <!-- 是否中空 -->
        <attr name="stroke" format="boolean" />
        <!--描边颜色-->
        <attr name="strokeColor" format="color" />
        <!-- 按压时是否只改变描边颜色 -->
        <attr name="onlyStrokeColor" format="boolean" />
        <!--矩形边框-->
        <attr name="border_color" format="color" />
        <!--矩形边框宽度-->
        <attr name="border_width" format="dimension" />
        <!--是否显示边框-->
        <attr name="is_show_border" format="boolean" />
        <!--顶部蒙版颜色-->
        <attr name="mask_color" format="dimension" />
        <!-- 四个角的圆角 -->
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <!-- 设置背景图片 -->
        <attr name="bga_drawable" format="reference" />

        <attr name="android:drawableLeft" />
        <attr name="android:drawablePadding" />
    </declare-styleable>

    <declare-styleable name="VerificationCodeInputView">
        <attr name="number_text_color" format="color" />
        <attr name="bottom_indicator_color" format="color" />
        <attr name="node_count" format="integer" />
    </declare-styleable>

    <!-- 自定义viewpager -->
    <declare-styleable name="MZBannerView">
        <attr name="open_mz_mode" format="boolean" />
        <attr name="canLoop" format="boolean" />
        <attr name="indicatorPaddingLeft" format="dimension" />
        <attr name="indicatorPaddingRight" format="dimension" />
        <attr name="indicatorPaddingTop" format="dimension" />
        <attr name="indicatorPaddingBottom" format="dimension" />
        <attr name="root_indicator_padding_bottom" format="dimension" />
        <attr name="indicatorAlign">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="mz_mode_page_align">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="middle_page_cover" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>
</resources>